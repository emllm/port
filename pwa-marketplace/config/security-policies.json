{
    "version": "1.0",
    "policies": {
        "default": {
            "permissions": {
                "storage": {
                    "read": true,
                    "write": true,
                    "delete": false
                },
                "network": {
                    "http": true,
                    "https": true,
                    "websocket": false
                },
                "system": {
                    "shell": false,
                    "notifications": true,
                    "system_tray": true
                }
            },
            "sandbox": {
                "enabled": true,
                "strict": true,
                "allowed_origins": ["https://marketplace.example.com"]
            }
        },
        "trusted": {
            "permissions": {
                "storage": {
                    "read": true,
                    "write": true,
                    "delete": true
                },
                "network": {
                    "http": true,
                    "https": true,
                    "websocket": true
                },
                "system": {
                    "shell": true,
                    "notifications": true,
                    "system_tray": true
                }
            },
            "sandbox": {
                "enabled": true,
                "strict": false,
                "allowed_origins": ["https://marketplace.example.com", "https://api.example.com"]
            }
        }
    },
    "whitelist": [
        "https://marketplace.example.com",
        "https://api.example.com",
        "https://github.com"
    ]
}
