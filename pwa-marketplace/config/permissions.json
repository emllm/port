{
    "version": "1.0",
    "permissions": {
        "storage": {
            "description": "Access to local storage",
            "scopes": {
                "read": {
                    "description": "Read access to storage",
                    "default": true
                },
                "write": {
                    "description": "Write access to storage",
                    "default": false
                },
                "delete": {
                    "description": "Delete access to storage",
                    "default": false
                }
            }
        },
        "network": {
            "description": "Network access",
            "scopes": {
                "http": {
                    "description": "HTTP access",
                    "default": true
                },
                "https": {
                    "description": "HTTPS access",
                    "default": true
                },
                "websocket": {
                    "description": "WebSocket access",
                    "default": false
                }
            }
        },
        "system": {
            "description": "System operations",
            "scopes": {
                "shell": {
                    "description": "Execute system commands",
                    "default": false
                },
                "notifications": {
                    "description": "Send system notifications",
                    "default": true
                },
                "system_tray": {
                    "description": "Access system tray",
                    "default": true
                }
            }
        },
        "mcp": {
            "description": "MCP protocol access",
            "scopes": {
                "connect": {
                    "description": "Connect to MCP server",
                    "default": true
                },
                "protocol_storage": {
                    "description": "Access storage protocol",
                    "default": true
                },
                "protocol_system": {
                    "description": "Access system protocol",
                    "default": false
                }
            }
        }
    },
    "default_policies": {
        "untrusted": {
            "storage": ["read"],
            "network": ["https"],
            "system": ["notifications"],
            "mcp": ["connect", "protocol_storage"]
        },
        "trusted": {
            "storage": ["read", "write"],
            "network": ["http", "https", "websocket"],
            "system": ["notifications", "system_tray"],
            "mcp": ["connect", "protocol_storage", "protocol_system"]
        },
        "enterprise": {
            "storage": ["read", "write", "delete"],
            "network": ["http", "https", "websocket"],
            "system": ["shell", "notifications", "system_tray"],
            "mcp": ["connect", "protocol_storage", "protocol_system"]
        }
    }
}
